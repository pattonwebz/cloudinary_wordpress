{
	"name": "cloudinary/cloudinary-image-management-and-manipulation-in-the-cloud-cdn",
	"homepage": "https://wordpress.org/plugins/cloudinary-image-management-and-manipulation-in-the-cloud-cdn/",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"sort-packages": true,
		"platform": {
			"php": "7.4.2",
			"ext-filter": "7.1"
		}
	},
	"require": {
		"php": ">=5.6.20"
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "^2.3",
		"automattic/vipwpcs": "^2.2",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
		"phpunit/phpcov": "^5.0",
		"phpunit/phpunit": "^7",
		"slowprog/composer-copy-file": "@stable",
		"xwp/wordpress-tests-installer": "@stable",
		"xwp/wp-dev-lib": "@stable"
	},
	"scripts": {
		"post-install-cmd": [
			"@setup"
		],
		"post-update-cmd": [
			"@setup"
		],
		"setup": [
			"SlowProg\\CopyFile\\ScriptHandler::copy",
			"if [ ! -f .env ]; then cp .env.dist .env; fi"
		],
		"lint": [
			"phpcs"
		],
		"fix": [
			"phpcbf"
		],
		"test": [
			"phpunit"
		],
		"test-coverage": [
			"phpunit --coverage-html tests/coverage/phpunit"
		]
	},
	"extra": {
		"installer-name": "cloudinary",
		"copy-file": {
			"tests/wp-tests-config.php": "vendor/xwp/wordpress-tests/phpunit/wp-tests-config.php"
		}
	}
}
