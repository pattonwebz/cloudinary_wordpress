{
  "name": "cloudinary",
  "title": "Cloudinary",
  "author": "XWP",
  "license": "GPL-2.0+",
  "private": true,
  "homepage": "https://github.com/cloudinary/cloudinary_wordpress",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudinary/cloudinary_wordpress.git"
  },
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "encore production",
    "dev": "encore dev --watch",
    "lint:php": "composer lint",
    "lint:js": "eslint .",
    "lint": "npm-run-all lint:php lint:js",
    "package": "npm run build && grunt package",
    "deploy": "npm run build && grunt deploy",
    "deploy-assets": "grunt deploy-assets",
    "postinstall": "composer install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.php": [
      "npm run lint"
    ],
    "*.js": [
      "eslint ."
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@symfony/webpack-encore": "^0.31.0",
    "@wordpress/block-editor": "5.0.0",
    "@wordpress/blocks": "^6.23.0",
    "@wordpress/components": "11.0.0",
    "@wordpress/data": "4.24.0",
    "@wordpress/editor": "^9.23.0",
    "@wordpress/element": "2.18.0",
    "@wordpress/eslint-plugin": "^7.3.0",
    "@wordpress/i18n": "3.16.0",
    "@wordpress/plugins": "2.22.0",
    "babel-eslint": "10.1.0",
    "cross-env": "7.0.2",
    "eslint": "7.10.0",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "7.21.3",
    "grunt": "1.3.0",
    "grunt-contrib-clean": "2.0.0",
    "grunt-contrib-compress": "1.6.0",
    "grunt-contrib-copy": "1.0.0",
    "grunt-wp-deploy": "2.1.2",
    "husky": "^4.3.0",
    "load-grunt-tasks": "^5.1.0",
    "loading-attribute-polyfill": "^1.5.4",
    "lodash": "4.17.20",
    "node-sass": "^4.14.1",
    "prettier": "^2.1.2",
    "sass-loader": "^9.0.1",
    "svg-inline-loader": "^0.8.2",
    "webpack-notifier": "^1.8.0"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "core-js": "^3.6.5",
    "dot-object": "^2.1.4",
    "npm-run-all": "^4.1.5"
  }
}
